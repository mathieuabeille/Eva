
<h1>Salons</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Salon</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Adress</th>
      <th>Postal code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salons.each do |salon| %>
      <tr>
        <td><%= salon.first_name %></td>
        <td><%= salon.last_name %></td>
        <td><%= salon.salon %></td>
        <td><%= salon.phone %></td>
        <td><%= salon.email %></td>
        <td><%= salon.adress %></td>
        <td><%= salon.postal_code %></td>
        <td><%= link_to 'Show', salon %></td>
        <td><%= link_to 'Edit', edit_salon_path(salon) %></td>
        <td><%= link_to 'Destroy', salon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

